Create--------------------------------------------------------------------
MouseinNode = false;
NumberofTurn = 1;


Left Button---------------------------------------------------------------
if(NumberofTurn == 1){
    with(Phomty_char){
        instance_destroy();
    }
    instance_create(x,y-25,Phomty_char)
}else if(NumberofTurn == 2){
    with(Falang_char){
        instance_destroy();
    }
    instance_create(x-15,y-99,Falang_char)
}


Mouse enter----------------------------------------------------------------
MouseinNode = true
if(MouseinNode = true){
    instance_create(x,y,casilla_seleccion_obj)
}


Mouse leave-----------------------------------------------------------------
MouseinNode = false;
if(MouseinNode = false){
    with(casilla_seleccion_obj){
        instance_destroy();
    }
}
